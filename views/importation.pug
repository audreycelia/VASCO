extends layout

block content

    div#importation
        div.container
            h1 Importation des donn√©es
            div.row
                div.col.s4
                    form#import-form(action="/importation",method="post", enctype="multipart/form-data")
                        div.file-field.input-field
                            div.btn
                                span Fichier
                                input#importfile(type="file", name="file", accept=".csv, .json,application/json").tooltipped(data-position="left", data-tooltip="Seulement fichier CSV")
                            div.file-path-wrapper
                            input.file-path.validate(name="importfile",type="text")

                        div.col.s12
                            button.btn.waves-effect.waves-light.right(type="submit") Suivant
                                i.material-icons.right send